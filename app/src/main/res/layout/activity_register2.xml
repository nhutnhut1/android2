<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register2">

    <TextView
        android:textStyle="bold"
        android:textColor="#CD2A2A"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:text="Đăng ký Tài Khoản 2/2"
        android:id="@+id/TvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/edtDiaChi"
        app:layout_constraintTop_toBottomOf="@id/TvTieuDe"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhập Họ và Tên"
        android:id="@+id/edtNhapHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/edtSDT"
        app:layout_constraintTop_toBottomOf="@id/edtNhapHoTen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhập Địa Chỉ"
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edtDiaChi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhập số điện thoại"
        android:id="@+id/edtSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        android:backgroundTint="#9C27B0"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtSDT"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Đăng Ký"
        android:id="@+id/btnDangKy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="#FFEB3B"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnDangKy1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Trở Lại"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>