<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:textStyle="bold"
        android:textColor="#CD2A2A"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:text="Mời bạn chọn món ăn"
        android:id="@+id/TvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#428350"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        app:layout_constraintBottom_toTopOf="@id/btnPho"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/TvTieuDe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Bún Bò"
        android:id="@+id/btnBunBo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="20sp"
        android:backgroundTint="#1A7CC8"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        app:layout_constraintBottom_toTopOf="@id/btnPho"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnBunBo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Phở"
        android:id="@+id/btnPho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button

        android:backgroundTint="#C81A1A"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/btnPho"
        app:layout_constraintTop_toTopOf="@id/btnPho"
        app:layout_constraintLeft_toRightOf="@id/btnPho"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Bún Giêu"
        android:id="@+id/btnBunRieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:backgroundTint="#B8720B"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        app:layout_constraintTop_toBottomOf="@id/btnPho"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Hủ Tiếu Sài Gòn"
        android:id="@+id/btnHuTieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:backgroundTint="#03A9F4"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        app:layout_constraintTop_toBottomOf="@id/btnHuTieu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Mì Quảng"
        android:id="@+id/btnMiQuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>