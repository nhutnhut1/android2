<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <TextView

        android:id="@+id/TvTieuDe3"
        android:textStyle="bold"
        android:textColor="#DD2020"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="35dp"
        android:gravity="center"
        android:text="Mời bạn nhập đồ uống"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText

        android:textSize="30dp"
        android:hint="Nhập tên đồ uống"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@id/TvTieuDe3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/edtOrderDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textStyle="bold"
        android:backgroundTint="#CA0EBE"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtOrderDrink"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Lưu"
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>