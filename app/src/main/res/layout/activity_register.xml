<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="15dp"

    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:textStyle="bold"
        android:textColor="#CD2A2A"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:text="Đăng ký Tài Khoản 1/2"
        android:id="@+id/TvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText

        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/edtNhapMK"
        app:layout_constraintTop_toBottomOf="@id/TvTieuDe"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhập Họ và tên"
        android:id="@+id/edtNhapTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/edtNhapLaiMK"
        app:layout_constraintTop_toBottomOf="@id/edtNhapTen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhập Mật Khẩu"
        android:id="@+id/edtNhapMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edtNhapMK"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nhâp lại mật khẩu"
        android:id="@+id/edtNhapLaiMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:backgroundTint="#2196F3"
        app:backgroundTint="@null"
        android:background="@drawable/botron"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/edtNhapLaiMK"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Tiếp Theo"
        android:id="@+id/btnTiepTheo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</androidx.constraintlayout.widget.ConstraintLayout>